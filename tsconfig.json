{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@averlon/shared/*": ["packages/averlon-shared/src/*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "container-analysis/**/*.ts",
    "container-analysis/**/*.test.ts",
    "iac-misconfig-analysis/**/*.ts",
    "iac-misconfig-analysis/**/*.test.ts",
    "iac-risk-analysis/**/*.ts",
    "iac-risk-analysis/**/*.test.ts",
    "k8s-analysis/**/*.ts",
    "k8s-analysis/**/*.test.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
